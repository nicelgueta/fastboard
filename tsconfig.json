{
    "compilerOptions": {
        "outDir": "./dist/",       
        "sourceMap": true,         
        "strictNullChecks": true,  
        "module": "es6",           
        "jsx": "react",            
        "target": "es5",           
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true     

    },
    "include": [
        "./src/"
    ]
}